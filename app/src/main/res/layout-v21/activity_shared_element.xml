<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/click_reveal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/textDesc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0ce11"
        android:elevation="4dp"
        android:gravity="center"
        android:padding="20dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/title"
        android:textColor="@android:color/darker_gray"
        android:textSize="30sp"
        android:transitionName="friends_shared" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/activity_title"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo_reveal"
            android:layout_width="200dp"
            android:layout_height="175dp"
            android:layout_weight="1"
            android:src="@drawable/adil"
            android:transitionName="logo_shared" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="175dp"
            android:layout_weight="1"
            android:src="@drawable/adil"
            android:transitionName="profile_pic_shared" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/detail" />


    <Button
        android:id="@+id/button_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv"
        android:layout_marginTop="50dp"
        android:text="@string/exit_button" />

</RelativeLayout>